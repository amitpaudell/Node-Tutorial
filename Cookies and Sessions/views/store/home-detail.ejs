<body>
<%-include('../partials/nav') %>
    <main>
      <h2 class="text-5xl text-center">Home details of <%=home.name%></h2>

      <ul>
       
          <div class="flex flex-col bg-white shadow-sm border border-slate-200 rounded-lg my-6 w-96">
            <div class="m-2.5 overflow-hidden rounded-md h-80 flex justify-center items-center">
              <img class="w-full h-full object-cover" src=<%=home.photoUrl%> alt="profile-picture" />
            </div>
            <div class="p-6 text-center">
              <h4 class="mb-1 text-xl font-semibold text-slate-800">
                <%=home.houseName %>
              </h4>
              <p
                class="text-sm font-semibold text-slate-500 ">
                Rs <%=home.price %> per night
              </p>
              <p class="text-base text-slate-600 mt-4 font-light ">
                Location: <%=home.location %> 
              </p>
            </div>
            <div class="flex-col  space-y-5 justify-center p-6 pt-2 ">
              <p>

                Rating: <%=home.rating %>  ‚≠ê
              </p>
              <p>
                Description:
                <%=home.description %>  
              </p>
              
             <%-include('../partials/addFavourite')%>

             
            </div>
       
        </div>
      </ul>
    </main>
  </body>
